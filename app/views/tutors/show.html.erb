<div class="tutor-profile">
  <h1 class="pb-4"><%= @tutors.name %></h1>

  <%= image_tag @tutors.image, :class => 'feature pb-5 tutor_image' %>

  <ul>
    <li><strong>Name:</strong> <%= @tutors.name %></li>
    <li><strong>Subject:</strong> <%= @tutors.subject %></li>
    <li><strong>What students say:</strong> <%= @tutors.bio %> </li>

    <% @tutors.subjects.each do |subject| %>
    <% end %>
  </ul>


  <div class="controls m-3 float-end">
    <%= button_to "Edit Tutor", edit_tutor_path(@tutors.id), :method => 'get' %><br>
    <%= button_to "Delete Tutor", @tutor, :method => 'delete', :data => { :confirm => 'Are you sure?'} %>
  </div>
</div>
