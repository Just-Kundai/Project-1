<div class="row mt-3">
  <div class="col-lg-12 text-center">
    <h1><%= @subject.name %></h1>

    <div class="justify-content-center">
      <%= link_to "Back To Subjects", subjects_path, :class => "btn btn-outline-info mr-3 mt-3" %>
      <%= link_to "Edit Subject", edit_subject_path(@subject.id), :class => "btn btn-outline-warning mr-3 mt-3"%>
      <%= link_to "Delete Subject", subject_path(@subject.id), :method => "delete", :class => "btn btn-outline-danger mt-3", data: {confirm: "Are you sure?"}%>
    </div>

    <div class="row mt-4">
      <div class="col-md-4">
        <p class="lead"><%= @subject.name %>'s Info</p>
        <p><span class="subject-info"><strong>Name:</strong></span> <%= @subject.name %> </p>
        <p><span class="subject-info"><strong>Available Tutors:</strong></span> </p>
        <% @subject.tutors.each do |tutor| %>
        <p class = "tutor">
          <%= link_to tutor.name, tutor_path(tutor.id) %>
        </p>
        <% end %>
      </div>
