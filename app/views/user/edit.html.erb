<div class="container">
    <div class="form-group mt-3">
        <%= form_for @user do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, :class => true , :class => "form-control"%>
        <%= f.label :password, :class => "mt-3"%>
        <%= f.password_field :password, :class => "form-control "%>
        <br />
        <%= f.submit "Update User", class: 'btn btn-outline-warning mt-3'  %>
        <% end %>
    </div>
</div>
